#!/usr/bin/env sh

echo "ğŸš€ Running pre-push checks..."

# Run full lint check
echo "ğŸ”§ Running full lint check..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed! Fix all lint errors before pushing."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npx tsc --noEmit --project tsconfig.base.json
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed! Fix the type errors before pushing."
  exit 1
fi

# Build all projects to ensure they compile
echo "ğŸ—ï¸ Building all projects..."
npm run build:all
if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Fix the build errors before pushing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests before push..."

# Verificar se hÃ¡ commits anteriores e origin/main existe
if git rev-parse --verify origin/main >/dev/null 2>&1; then
  # origin/main existe, executar affected test
  echo "ğŸ“Š Running affected tests..."
  npx nx affected:test --coverage --base=origin/main --head=HEAD --maxWorkers=1
  TEST_RESULT=$?
else
  # origin/main nÃ£o existe, executar testes das libs principais
  echo "ğŸ“Š Running main library tests..."
  npx nx run-many --target=test --projects=error-handling,rabbitmq,common --coverage --maxWorkers=1
  TEST_RESULT=$?
fi

# Se os testes falharem, bloquear push
if [ $TEST_RESULT -ne 0 ]; then
  echo "âŒ Tests failed! Fix the tests before pushing."
  echo "ğŸ’¡ Run 'npm run test' locally to debug"
  exit 1
fi

echo "âœ… All pre-push checks passed!"
