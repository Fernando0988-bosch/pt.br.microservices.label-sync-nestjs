#!/usr/bin/env sh

echo "ğŸ§¹ Running pre-commit checks..."

# Execute lint-staged with strict error handling
echo "ğŸ“ Running lint-staged..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed! Fix the errors before committing."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npx tsc --noEmit --project tsconfig.base.json
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed! Fix the type errors before committing."
  exit 1
fi

# Run lint check on all files to ensure no 'any' types
echo "ğŸ”§ Running strict lint check..."
npx eslint . --max-warnings 0
if [ $? -ne 0 ]; then
  echo "âŒ ESLint strict check failed! Fix all lint errors (including 'any' types) before committing."
  echo "ğŸ’¡ Use 'npm run lint:fix' to auto-fix some issues"
  exit 1
fi

# Verificar se hÃ¡ commits anteriores antes de executar nx affected
if git rev-parse --verify HEAD~1 >/dev/null 2>&1; then
  # HÃ¡ commits anteriores, executar affected test
  echo "ğŸ§ª Running affected tests..."
  npx nx affected:test --base=HEAD~1 --head=HEAD
  if [ $? -ne 0 ]; then
    echo "âŒ Some tests failed! Fix the tests before committing."
    exit 1
  fi
else
  # Primeiro commit, pular affected test
  echo "â­ï¸ First commit detected, skipping nx affected:test"
fi

echo "âœ… All pre-commit checks passed!"
